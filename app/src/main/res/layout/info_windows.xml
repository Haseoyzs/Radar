<?xml version="1.0" encoding="utf-8"?>
<cn.haseo.radar.widget.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bubbleLayout"
    android:orientation="vertical"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:padding="16dp"
    app:radius="4dp"
    app:shadow_size="4dp"
    app:background_color="#EDEDED">

    <TextView
        android:id="@+id/name_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="16sp" />

    <cn.haseo.radar.widget.MyTextView
        android:id="@+id/number_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        app:fontName="04b24" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="100dp"
        android:layout_height="22dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/track"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="@string/button_track"
            android:background="@null"
            style="?android:attr/button" />

        <Button
            android:id="@+id/detail"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="@string/button_detail"
            android:background="@null"
            style="?android:attr/button" />

    </LinearLayout>

</cn.haseo.radar.widget.BubbleLayout>